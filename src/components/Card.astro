---
interface Props {
  title: string;
  subtitle?: string;
  href?: string;
}

const { href, title, subtitle } = Astro.props;
---

<a 
  href={href || "#"} 
  class="group relative block w-full p-6 sm:p-8 rounded-2xl border border-white/10 bg-white/5 hover:bg-white/10 transition-all duration-300 hover:scale-[1.01] hover:border-white/20"
>
  <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
    <div>
      <h3 class="text-xl font-medium text-slate-200 group-hover:text-blue-400 transition-colors">
        {title}
      </h3>
      {subtitle && (
        <p class="mt-1 text-slate-400 text-sm font-light">
          {subtitle}
        </p>
      )}
    </div>

    <div class="text-slate-500 group-hover:text-white transition-colors transform group-hover:translate-x-1">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
    </div>
  </div>
</a>