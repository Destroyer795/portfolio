---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" showNavbar={false}>
  <section class="min-h-[60vh] flex flex-col items-center justify-center text-center px-6">
    <h1 class="text-6xl md:text-8xl font-bold text-neutral-900 dark:text-white mb-4">404</h1>
    <p class="text-xl md:text-2xl text-neutral-600 dark:text-neutral-400 mb-8">
      The page you're looking for doesn't exist.
    </p>
    <a href="/" id="cyber-btn" class="relative inline-flex h-12 overflow-hidden rounded-full p-[1px] focus:outline-none focus:ring-2 focus:ring-neutral-400 focus:ring-offset-2 focus:ring-offset-neutral-50 group hover:scale-105 transition-transform duration-300">
      <span class="absolute inset-[-1000%] animate-[spin_4s_linear_infinite] group-hover:animate-[spin_1.5s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#e5e5e5_0%,#10b981_50%,#e5e5e5_100%)] dark:bg-[conic-gradient(from_90deg_at_50%_50%,#0a0a0a_0%,#10b981_50%,#0a0a0a_100%)]"></span>
      <span id="cyber-text" class="inline-flex h-full w-full cursor-pointer items-center justify-center rounded-full bg-white dark:bg-neutral-950 px-8 py-1 text-sm font-medium text-neutral-900 dark:text-white backdrop-blur-3xl transition-all group-hover:bg-white/90 dark:group-hover:bg-neutral-950/90 group-hover:shadow-lg group-hover:shadow-neutral-500/20">
        Go Back Home
      </span>
    </a>

    <script>
      const btn = document.getElementById('cyber-btn');
      const text = document.getElementById('cyber-text');
      const originalText = "Go Back Home";
      const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
      let interval: any = null;

      if (btn && text) {
        btn.addEventListener('mouseenter', () => {
          let iteration = 0;
          clearInterval(interval);

          interval = setInterval(() => {
            text.innerText = text.innerText
              .split("")
              .map((letter, index) => {
                if(index < iteration) {
                  return originalText[index];
                }
                return letters[Math.floor(Math.random() * 26)]
              })
              .join("");

            if(iteration >= originalText.length){
              clearInterval(interval);
              text.innerText = originalText;
            }

            iteration += 1 / 3;
          }, 30);
        });
        
        btn.addEventListener('mouseleave', () => {
          clearInterval(interval);
          text.innerText = originalText;
        });
      }
    </script>
  </section>
</BaseLayout>
